{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BankConfig",
  "description": "Initial configuration for sov-bank module.",
  "type": "object",
  "required": [
    "gas_token_config",
    "tokens"
  ],
  "properties": {
    "gas_token_config": {
      "description": "Configuration for the gas token",
      "allOf": [
        {
          "$ref": "#/definitions/GasTokenConfig"
        }
      ]
    },
    "tokens": {
      "description": "A list of configurations for any other tokens to create at genesis",
      "type": "array",
      "items": {
        "$ref": "#/definitions/TokenConfig"
      }
    }
  },
  "definitions": {
    "Address": {
      "description": "Address",
      "type": "string",
      "pattern": "^sov1[a-zA-Z0-9]+$"
    },
    "GasTokenConfig": {
      "description": "[`GasTokenConfig`] specifies a configuration for the rollup's gas token.",
      "type": "object",
      "required": [
        "address_and_balances",
        "authorized_minters",
        "token_name"
      ],
      "properties": {
        "address_and_balances": {
          "description": "A vector of tuples containing the initial addresses and balances (as u64)",
          "type": "array",
          "items": {
            "type": "array",
            "items": [
              {
                "$ref": "#/definitions/Address"
              },
              {
                "type": "integer",
                "format": "uint64",
                "minimum": 0.0
              }
            ],
            "maxItems": 2,
            "minItems": 2
          }
        },
        "authorized_minters": {
          "description": "The addresses that are authorized to mint the token.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Address"
          }
        },
        "token_name": {
          "description": "The name of the token.",
          "type": "string"
        }
      }
    },
    "TokenConfig": {
      "description": "[`TokenConfig`] specifies a configuration used when generating a token for the bank module.",
      "type": "object",
      "required": [
        "address_and_balances",
        "authorized_minters",
        "token_id",
        "token_name"
      ],
      "properties": {
        "address_and_balances": {
          "description": "A vector of tuples containing the initial addresses and balances (as u64)",
          "type": "array",
          "items": {
            "type": "array",
            "items": [
              {
                "$ref": "#/definitions/Address"
              },
              {
                "type": "integer",
                "format": "uint64",
                "minimum": 0.0
              }
            ],
            "maxItems": 2,
            "minItems": 2
          }
        },
        "authorized_minters": {
          "description": "The addresses that are authorized to mint the token.",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Address"
          }
        },
        "token_id": {
          "description": "Predetermined ID of the token. Allowed only for genesis tokens.",
          "allOf": [
            {
              "$ref": "#/definitions/TokenId"
            }
          ]
        },
        "token_name": {
          "description": "The name of the token.",
          "type": "string"
        }
      }
    },
    "TokenId": {
      "description": "A globally unique identifier.",
      "type": "array",
      "items": {
        "type": "integer",
        "format": "uint8",
        "minimum": 0.0
      },
      "maxItems": 32,
      "minItems": 32
    }
  }
}
